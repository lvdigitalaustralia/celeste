<!doctype html>
<html>
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
    {{ content_for_header }}
    <!-- Header hook for plugins -->
    <link href="{{ 'stylesheet.css' | asset_url }}" rel="stylesheet">
    <link href="{{ 'theme.css' | asset_url }}" rel="stylesheet">
  </head>
  <body>
    {% section 'header' %}
    <main role="main">

      {{ content_for_layout }}

      {% section 'text-centre' %}

      {% comment %} {{ all_products['blue-berry'].price }}

      <br> {% endcomment %}

      {% comment %} if -> elsif -> else -> endif -> endif {% endcomment %}
      {% comment %} {% if all_products['blue-berry'].title != 'The Blue Berry' %}
        The title of the product is "The Blue Berry".
        <br>
      {% elsif all_products['yellow-mellow'].title != 'The Yellow Mello' %}
        The title of the product is "The Yellow Mello".
        <br>
      {% else %}
        The title of the product is not "The Blue Berry or The Yellow Mello".
        <br>
      {% endif %} {% endcomment %}

      {% comment %} unless -> endunless {% endcomment %}
      {% comment %} {% unless all_products['blue-berry'].title != 'The Blue Berry' %}
        The title of the product is not "The Blue Berry".
        <br>
      {% endunless %} {% endcomment %}

      {% comment %} case -> endcase {% endcomment %}
      {% comment %} {% case all_products['blue-berry'].title %}
        {% when 'The Blue Berry' %}
          This is The Blue Berry.
          <br>
        {% when 'The Yellow Mello' %}
          This is The Yellow Mello.
          <br>
        {% else %}
          This is neither The Blue Berry or The Yellow Mello.
          <br>
      {% endcase %} {% endcomment %}

      {% comment %} for {% endcomment %}
      {% comment %} {% for index in (1..100) %}
        {{ index }}
      {% endfor %}
      <br> {% endcomment %}

      {% comment %} for -> forloop {% endcomment %}
      {% comment %} {% for index in (1..100) %}
        <p id="paragraph-{{ forloop.index0 }}">Paragraph: {{ forloop.index0 }}</p>
      {% endfor %}
      <br> {% endcomment %}

      {% comment %} cycle {% endcomment %}
      {% comment %} {% for index in (1..100) %}
        {% cycle 'first', 'second', 'third', 'fourth', 'fifth' %}
      {% endfor %}
      <br>
      <br>
      <br>
      <br>
      <br> {% endcomment %}

      <img src="{{ 'LVDigitalLogoSquare.png' | asset_url }}" width="100%">

    </main>
  </body>
</html>
